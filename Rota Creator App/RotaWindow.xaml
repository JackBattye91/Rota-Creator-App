<Window x:Class="Rota_Creator_App.RotaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rota_Creator_App"
        mc:Ignorable="d"
        Title="Rota" Height="450" Width="800" SizeToContent="WidthAndHeight" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="rotaGrid">
            <Grid.ContextMenu>
                <ContextMenu/>
            </Grid.ContextMenu>
            <ProgressBar x:Name="progLoading" HorizontalAlignment="Center" VerticalAlignment="Center" Height="18" Width="105" IsIndeterminate="True"/>
        </Grid>

        <Grid Grid.Row="1">
            <CheckBox x:Name="chkPropagateChanges" Content="Propagate Changes" IsChecked="True" Margin="5"/>
            <Button x:Name="btnPrint" Content="Print" HorizontalAlignment="Right" Margin="0,5,64,5" Width="49" Click="btnPrint_Click" IsEnabled="False"/>
            <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" Margin="0,5,10,5" Width="49" Click="btnClose_Click"/>
        </Grid>
    </Grid>
</Window>
